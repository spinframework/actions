{
  "name": "actions",
  "version": "1.0.0",
  "description": "This provide actions for spin setup, build and push of spin apps.",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build -o dist/spin/setup src/setup.ts && ncc build -o dist/spin/push src/push.ts",
    "test": "jest",
    "all": "npm run build && npm run format && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spinframework/actions.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "spin"
  ],
  "author": "The Spin Framework Contributors",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^2.0.0",
    "@actions/tool-cache": "^2.0.2",
    "@octokit/rest": "^22.0.0",
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.3.2",
    "toml": "^3.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.2.0",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
